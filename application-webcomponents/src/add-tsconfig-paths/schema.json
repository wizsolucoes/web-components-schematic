{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "add-tsconfig-paths",
  "title": "Add Tsconfig Paths Options Schema",
  "type": "object",
  "description": "Adiciona Path Aliases no tsconfig.app.json do projeto",
  "additionalProperties": false,
  "properties": {
    "name": {
      "description": "Nome do projeto (web component)",
      "type": "string",
      "pattern": "^(?:@[a-zA-Z0-9-*~][a-zA-Z0-9-*._~]*/)?[a-zA-Z0-9-~][a-zA-Z0-9-._~]*$"
    }
  }
}
