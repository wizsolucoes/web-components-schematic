{
  "$schema": "../node_modules/@angular-devkit/schematics/collection-schema.json",
  "schematics": {
    "ng-add": {
      "aliases": ["init"],
      "factory": "./ng-add",
      "schema": "./ng-add/schema.json",
      "description": "Criação do pacote"
    },
    "application": {
      "factory": "./template-webcomponents",
      "schema": "./template-webcomponents/schema.json",
      "description": "Criação do pacote"
    },
    "application-mfe": {
      "factory": "./template-mfe",
      "schema": "./template-mfe/schema.json",
      "description": "Inserir MFE"
    },
    "template-add-eslint-prettier": {
      "factory": "./template-add-eslint-prettier",
      "schema": "./template-add-eslint-prettier/schema.json",
      "description": "Inserir eslint e prettier"
    },
    "template-pipeline-ci": {
      "factory": "./template-pipeline-ci",
      "schema": "./template-pipeline-ci/schema.json",
      "description": "Inserir arquivo pipeline default"
    },
    "application-mfe-final-change": {
      "factory": "./template-mfe-final-change",
      "schema": "./template-mfe-final-change/schema.json",
      "description": "Modificador Webpack"
    },
    "env-b2c": {
      "factory": "./env-b2c",
      "schema": "./env-b2c/schema.json",
      "description": "Inserir variáveis de ambiente"
    }
  }
}
