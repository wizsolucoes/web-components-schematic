import { Component, EventEmitter, Input, Output, SimpleChanges, ViewEncapsulation, AfterViewInit } from '@angular/core';
import { Router } from '@angular/router';
import { WcoService } from '@wizco/wizpro-tools';

@Component({
  selector: '<%= selector %>',
  template: `
    <ng-container *ngIf="widget>
      <<%= selector %>-widget/>
    </ng-container>
    <ng-container *ngIf="!widget>
      <router-outlet></router-outlet>
    </ng-container>
  `,
  styleUrls: ['./app.component.scss'],
  encapsulation: ViewEncapsulation.None,
})

export class AppComponent implements AfterViewInit {
  @Input() widget = false
  @Input() currentPath!: string;
  @Output() appOutput = new EventEmitter();

  constructor(
    private router: Router,
    private wcoService: WcoService
  ) {}

  ngAfterViewInit(): void {
    if(!this.widget) {
      this.wcoService.connectRouter(this.router);
    }
  }
}
