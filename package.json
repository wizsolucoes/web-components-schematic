{
  "name": "angular-schematics-webcomponents",
  "version": "1.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "run:clean": "node --experimental-modules ./sripts/run-local.mjs",
    "run:local": "npm run run:clean && npm run schematics:build && npm run schematics:link",
    "run:local-b2c": "npm run schematics:build && npm run schematics:link",
    "postrun:local": "ng g @wizco/schematics-webcomponents:init",
    "postrun:local-b2c": "ng g @wizco/schematics-webcomponents:env-b2c",
    "schematics:intall": "yarn --cwd ./application-webcomponents install",
    "schematics:build": "yarn --cwd ./application-webcomponents build",
    "schematics:watch": "yarn --cwd ./application-webcomponents watch",
    "schematics:link": "npm unlink ./application-webcomponents && npm link ./application-webcomponents",
    "schematics:prepare-external": "npm run schematics:build && npm run schematics:link",
    "wiztools:publish": "ng build wizpro-tools",
    "start:module": "ng serve --project novidaede",
    "extra:build": "ng build --project botafogo --output-hashing none --aot --build-optimizer",
    "extra:build:staging": "ng build --configuration=staging --project botafogo --output-hashing none --aot --build-optimizer",
    "run:all": "node node_modules/@angular-architects/module-federation/src/server/mf-dev-server.js",
    "lint": "ng lint",
    "build:module": "ng build --project novidaede --output-hashing none --aot",
    "build:module:staging": "ng build --configuration staging --project novidaede --output-hashing none --aot",
    "build:module:sandbox": "ng build --configuration sandbox --project novidaede --output-hashing none --aot"
  },
  "private": true,
  "dependencies": {
    "@angular-architects/module-federation-tools": "^20.0.0",
    "@angular/animations": "^20.0.0",
    "@angular/cdk": "^20.0.0",
    "@angular/common": "^20.0.0",
    "@angular/compiler": "^20.0.0",
    "@angular/core": "^20.0.0",
    "@angular/forms": "^20.0.0",
    "@angular/platform-browser": "^20.0.0",
    "@angular/platform-browser-dynamic": "^20.0.0",
    "@angular/router": "^20.0.0",
    "@schematics/angular": "^20.0.0",
    "jwt-decode": "^4.0.0",
    "rxjs": "~7.8.1",
    "tslib": "^2.6.2",
    "zone.js": "^0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.0.0",
    "@angular-eslint/builder": "^20.0.0",
    "@angular-eslint/eslint-plugin": "^20.0.0",
    "@angular-eslint/eslint-plugin-template": "^20.0.0",
    "@angular-eslint/template-parser": "^20.0.0",
    "@angular/cli": "^20.0.0",
    "@angular/compiler-cli": "^20.0.0",
    "@types/jasmine": "~5.1.1",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "jasmine-core": "~5.1.1",
    "karma": "~6.4.2",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^20.0.0",
    "ngx-build-plus": "^20.0.0",
    "typescript": "~5.6.0"
  }
}
